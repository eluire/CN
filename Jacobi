clc
xold=zeros(4,1);
xnew=zeros(4,1);
p=5
i=0
while(1)
  xnew(1)=((0.3*xold(2)+0.6*xold(3)+1.8)/3)
  xnew(2)=((0.6*xold(1)+0.6*xold(3)+10.8)/6)
  xnew(3)=((1.6*xold(2)+6.4*xold(4)-8)/8)
  xnew(4)=((0.2*xold(1)+0.6*xold(2)-0.4*xold(3)+3)/2)
  erro_rel=(max(abs(xnew-xold)))/(max(abs(xnew)));
  xold=xnew
  i=i+1
  if(erro_rel<10^-p)
      break
  end
end
